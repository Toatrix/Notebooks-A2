








from sklearn.datasets import load_digits





digits=load_digits()


print(digits.DESCR)





digits.target[::100]





digits.data.shape





digits.target.shape





digits.images[15]





digits.data[15]








import matplotlib.pyplot as plt





figure,axes=plt.subplots(nrows=4,ncols=6,figsize=(6,4))





figure,axes=plt.subplots(nrows=4,ncols=6,figsize=(6,4))
for item in zip(axes.ravel(),digits.images,digits.target):
    axes,image,target=item
    axes.imshow(image,cmap=plt.cm.gray_r)
    axes.set_xticks([])
    axes.set_yticks([])
    axes.set_title(target)
plt.tight_layout()








from sklearn.model_selection import train_test_split





X_train,X_test,y_train,y_test=train_test_split(digits.data,digits.target,random_state=11)  #llamados as√≠ por convecion, el 11 es al azar





X_train.shape


X_test.shape








from sklearn.neighbors import KNeighborsClassifier





knn=KNeighborsClassifier()








knn.fit(X=X_train, y=y_train)








prediccion=knn.predict(X=X_test)





esperado=y_test





prediccion[:20]


esperado[:20]





equivocados=[(p,e)for (p,e)in zip (prediccion,esperado)if p!=e]


equivocados











print (f'{knn.score(X_test,y_test):.2%}') 





from sklearn.metrics import confusion_matrix





confusion=confusion_matrix(y_true=esperado,y_pred=prediccion)





confusion





from sklearn.metrics import classification_report





nombres=[str(digit)for digit in digits.target_names]





nombres


print(classification_report(esperado,prediccion,target_names=nombres))





import pandas as pd


confusion_df=pd.DataFrame(confusion,index=range(10),columns=range(10))


import seaborn as sns


axes=sns.heatmap(confusion_df,annot=True,cmap='nipy_spectral_r')








from sklearn.model_selection import KFold





kfold=KFold(n_splits=10,random_state=11,shuffle=True)





from sklearn.model_selection import cross_val_score





puntuacion=cross_val_score(estimator=knn,X=digits.data,y=digits.target,cv=kfold)





puntuacion


puntuacion.mean()


puntuacion.std()



















































































































































































































































































































































































































































































































































































































































































































































